<Window x:Class="PPTMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPTMerger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10" MaxWidth="1000">
        <Border BorderThickness="1" BorderBrush="Gray">
            <StackPanel Margin="10" Orientation="Vertical">
                <Label Content="Slect file type"/>
                <ComboBox>
                    <ComboBoxItem>Presentations</ComboBoxItem>
                    <ComboBoxItem>Excels</ComboBoxItem>
                    <ComboBoxItem>PDF</ComboBoxItem>
                    <ComboBoxItem>Word</ComboBoxItem>
                </ComboBox>
                <Button Content="Select PowerPoint presentations" Command="{Binding SelectFilesCommand}"/>
                <ListBox ItemsSource="{Binding SelectedFiles}" Margin="0 10"/>
                <Button Content="Merge and Save" Command="{Binding MergeCommand}" Margin="0 10" Width="200"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
