<Window x:Class="PPTMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPTMerger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Select PowerPoint presentations" Command="{Binding SelectFilesCommand}"/>
            <ListBox ItemsSource="{Binding SelectedFiles}" Margin="0 10"/>
            <Button Content="Merge and Save" Command="{Binding MergeCommand}" Margin="0 10" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
